/**
 * Animation classes
 */
.animationPulse
	animation pulse 600ms
	box-shadow 0 0 0 10px rgba(#fff, 0)!important
	border-radius 50%!important

/**
 * Animation keyframes
 */
@keyframes pulse {
  0% {
		box-shadow 0 0 0 0 #61DAFB
	}
}

@keyframes App-logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes loader {
	0% {
		top: 28px;
		left: 28px;
		width: 0;
		height: 0;
		opacity: 1;
	}
	100% {
		top: -1px;
		left: -1px;
		width: 58px;
		height: 58px;
		opacity: 0;
	}
}

@keyframes loaderRemSize {
	0% {
		top: 7.5rem;
		left: 7.5rem;
		width: 0;
		height: 0;
		opacity: 1;
	}
	100% {
		top: -1px;
		left: -1px;
		width: 15rem;
		height: 15rem;
		opacity: 0;
	}
}
